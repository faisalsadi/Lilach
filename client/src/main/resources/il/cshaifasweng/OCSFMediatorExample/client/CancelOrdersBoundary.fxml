<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: cornsilk;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.CancelOrdersBoundaryController">
   <children>
      <Text fx:id="cancellationL" fill="#b91b1b" layoutX="182.0" layoutY="57.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: linear-gradient linear-gradient; -fx-font-weight: bold; -fx-font-style: oblique; -fx-font-size: 40px;" text="Cancellation" textAlignment="CENTER" />
      <Button fx:id="userName" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#getDetails" style="-fx-background-color: linear-gradient(#ff5400, #be1d00); -fx-background-insets: 0,1,2; -fx-background-radius: 3,2,1; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;" />
      <Label fx:id="orderL" layoutX="154.0" layoutY="120.0" style="-fx-text-fill: linear-gradient(#ff5400, #be1d00); -fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 15px;" text="Order Number:" />
      <TextField fx:id="orderNumberTF" layoutX="339.0" layoutY="120.0" />
      <Label fx:id="sorryL" layoutX="124.0" layoutY="160.0" style="-fx-text-fill: linear-gradient(#ff5400, #be1d00); -fx-font-weight: bold; -fx-font-style: italic; -fx-font-size: 15px;" text="Hello! we are sorry you want to cancel your order!" />
      <TextArea fx:id="message" layoutX="47.0" layoutY="200.0" prefHeight="95.0" prefWidth="505.0" style="-fx-font-weight: bold;" text="Just so you know: &#10;* If you cancel your order 3 hours before supply time - you will receive 100% refund&#10;* If you cancel your order 1 - 3 hours before supply time - you will receive 50% refund&#10;* If you cancel your order less than 1 hour before supply time - &#10;  you will not receive any refund" />
      <Button fx:id="backBtn" layoutX="180.0" layoutY="322.0" mnemonicParsing="false" onAction="#backOnClick" style="-fx-background-color: linear-gradient(#ff5400, #be1d00); -fx-background-insets: 0,1,2; -fx-background-radius: 3,2,1; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Back" />
      <Button fx:id="applyBtn" layoutX="386.0" layoutY="322.0" mnemonicParsing="false" onAction="#applyOnClick" style="-fx-background-color: linear-gradient(#ff5400, #be1d00); -fx-background-insets: 0,1,2; -fx-background-radius: 3,2,1; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 15px;" text="Send" />
   </children>
</AnchorPane>
