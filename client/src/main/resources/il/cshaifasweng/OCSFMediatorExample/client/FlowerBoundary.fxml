<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="Item" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: cornsilk;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.FlowerBoundaryController">
    <children>
        <ImageView fx:id="flowerImg" fitHeight="200.0" fitWidth="200.0" layoutX="70.0" layoutY="70.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Images/beamingblush.jpg" />
            </image></ImageView>
        <TextField fx:id="txt" layoutX="285.0" layoutY="60.0" prefHeight="29.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" text="flower name" />
      <TextField fx:id="txt1" layoutX="285.0" layoutY="100.0" prefHeight="29.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" text="flower serial number" />
      <TextField fx:id="txt2" layoutX="285.0" layoutY="140.0" prefHeight="29.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" text="flower type" />
        <TextField fx:id="priceLabel" editable="false" layoutX="286.0" layoutY="180.0" prefHeight="28.0" prefWidth="57.0" style="-fx-background-color: transparent; -fx-font-size: 14px; -fx-font-weight: bold; -fx-font-style: italic;" text="price: " />
        <TextField fx:id="priceTxt" layoutX="348.0" layoutY="180.0" prefHeight="26.0" prefWidth="120.0" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" text="price" />
        <TextField fx:id="dollarLabel" editable="false" layoutX="410.0" layoutY="180.0" prefHeight="26.0" prefWidth="30.0" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" text="\$" />
      <TextField fx:id="txt3" layoutX="285.0" layoutY="220.0" prefHeight="29.0" prefWidth="200.0" style="-fx-background-color: transparent; -fx-font-weight: bold; -fx-font-size: 14px; -fx-font-style: italic;" text="flower discount" />
        <TextField fx:id="descriptionTxt" alignment="CENTER" layoutX="150.0" layoutY="270.0" prefHeight="50.0" prefWidth="314.0" style="-fx-background-color: cornsilk; -fx-font-size: 16px; -fx-border-color: transparent; -fx-background-insets: 0, 1; -fx-background-radius: 3, 2; -fx-font-weight: bold; -fx-font-style: italic;" />
        <Button fx:id="addToCartBtn" layoutX="255.0" layoutY="335.0" mnemonicParsing="false" onAction="#addBtn" prefHeight="35.0" prefWidth="120.0" style="-fx-background-color: linear-gradient(#ff5400, #be1d00); -fx-background-insets: 0,1,2; -fx-background-radius: 3,2,1; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;" text="Add To Cart" />
        <Button fx:id="returnBtn" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#returnBtn" prefHeight="35.0" prefWidth="86.0" style="-fx-background-color: linear-gradient(#ff5400, #be1d00); -fx-background-insets: 0,1,2; -fx-background-radius: 3,2,1; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;" text="Return " />

    </children>
</AnchorPane>
